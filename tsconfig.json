{
    "compilerOptions": {
        "rootDir": "src/ts",
        "outDir": "www/js/",
        "strict": false,
        "removeComments": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "inlineSourceMap": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "target": "ES2017",
        "allowJs": true,
        "allowUmdGlobalAccess": true,
        "esModuleInterop": true
    },

    "include": ["src/ts/app.ts", "node_modules/cordova*/**/*.d.ts"],
    "exclude": ["node_modules/**"]
}
