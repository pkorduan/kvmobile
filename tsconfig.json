{
    "compilerOptions": {
        "rootDir": "src/ts",
        "outDir": "www/js",
        "strict": false,
        "removeComments": false,
        "module": "none",
        "moduleResolution": "node",
        "inlineSourceMap": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "target": "ES2020",
        "allowJs": true,
        "allowUmdGlobalAccess": true
    },

    "include": ["src/ts/**/*"],
    "exclude": ["node_modules/**"]
}
